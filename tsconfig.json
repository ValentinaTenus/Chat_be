{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "baseUrl": ".",
      "paths": {
          "~/*": ["./src/*"]
      },
      "outDir": "dist",
      "skipLibCheck": true
  }
}